<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Exclude shared preferences that contain GCM registration ID -->
    <exclude domain="sharedpref" path="gcm_preferences.xml"/>
    
    <!-- Include all files in the shared_prefs directory except GCM prefs -->
    <include domain="sharedpref" path="."/>
    
    <!-- Include the database -->
    <include domain="database" path="."/>
    
    <!-- Include files in the files directory -->
    <include domain="file" path="."/>
    
    <!-- Include device protected storage if needed -->
    <include domain="deviceprotectedfile" path="."/>
    
    <!-- Include external storage if needed -->
    <include domain="external" path="."/>
    
    <!-- Don't back up the cache directory -->
    <exclude domain="root" path="cache"/>
    
    <!-- Don't back up the no_backup directory -->
    <exclude domain="root" path="no_backup"/>
</full-backup-content>
